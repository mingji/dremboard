<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.drem.dremboard.view.WebCircularImgView
            android:id="@+id/img_drem_author"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_margin="8dip"
            android:background="@drawable/btn_close" >
        </Button>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtEditDremboardBar"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginLeft="12dip"
        android:gravity="center_vertical"
        android:text="@string/text_edit_act_title"
        android:textSize="16sp" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dip" 
        android:layout_marginTop="4dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblActStatus"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="30dip"
            android:gravity="center_vertical"
            android:text="@string/text_edit_act_status" >
        </TextView>

        <EditText
            android:id="@+id/edtDremStatus"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/style_textview_border"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:paddingLeft="2dip"
            android:scrollbars="vertical"
            android:singleLine="true"
            android:textSize="13sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblCategory"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="30dip"
            android:gravity="center_vertical"
            android:text="@string/text_dremboard_category" >
        </TextView>

        <Spinner
            android:id="@+id/spinActEditCategory"
            android:layout_width="match_parent"
            android:layout_height="34dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="2dip"
            android:background="@drawable/bg_spinner"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:textColor="@color/lightgray2" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="100dip"
        android:layout_height="30dip"
        android:layout_gravity="right"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="40dip"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="@string/btn_save_changes_dremboard"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>