<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/layActivityOption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        android:orientation="vertical"
        android:padding="10dip"
        android:paddingLeft="20dip"
    	android:paddingRight="20dip" >

        <Spinner
            android:id="@+id/spinDremActivityOption"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:gravity="center_vertical"
            android:paddingLeft="3dip"
            android:textColor="@color/lightgray2" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <GridView
        android:id="@+id/gridDremActivities"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/progMore"
        android:layout_below="@+id/layActivityOption"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@android:color/transparent"
        android:columnWidth="250dip"
        android:gravity="center"
        android:horizontalSpacing="5dip"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="15dp" >

    </GridView>

</RelativeLayout>