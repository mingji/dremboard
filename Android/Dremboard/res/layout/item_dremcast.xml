<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grayborder"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:id="@+id/layUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/activity_action"
        android:orientation="horizontal" >

        <com.drem.dremboard.view.WebCircularImgView
            android:id="@+id/videoUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Author" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:minHeight="30dp"
            android:paddingLeft="10dp"
            android:text="Author Name"
            android:textColor="#783302"
            android:textColorLink="#783302"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </LinearLayout>

    <com.drem.dremboard.view.WebImgView
        android:id="@+id/imgDremcastPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layUser"
        android:layout_centerHorizontal="true"
      android:background="@drawable/grayborder"
        android:gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtVideoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDremcastPic"
        android:layout_marginLeft="5dip"
        android:padding="5dip"
        android:text="3 Drems"
        android:textColor="@color/darkgray"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVideoName"
        android:layout_marginTop="3dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <Button
            android:id="@+id/btnLike"
            android:layout_width="40dip"
            android:layout_height="18dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_action"
            android:gravity="center"
            android:text="@string/text_like"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="40dip"
            android:layout_height="18dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_action"
            android:gravity="center"
            android:text="@string/text_share"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="60dip"
            android:layout_height="18dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_action"
            android:gravity="center"
            android:text="@string/text_fav"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnFlag"
            android:layout_width="40dip"
            android:layout_height="18dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_action"
            android:gravity="center"
            android:text="@string/text_flag"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>