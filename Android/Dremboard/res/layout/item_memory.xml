<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <LinearLayout
        android:id="@+id/layUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.drem.dremboard.view.WebCircularImgView
            android:id="@+id/videoUser"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:text="User Name"
            android:textColor="@color/fg_darkred"
            android:textSize="12sp" />
    </LinearLayout>

    <com.drem.dremboard.view.WebImgView
        android:id="@+id/imgPic"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_below="@+id/layUser"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_lightblue"
        android:gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtVideoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPic"
        android:layout_centerHorizontal="true"
        android:text="Greate Race"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtVideoName"
        android:layout_marginTop="3dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="50dip"
            android:layout_height="18dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_action"
            android:gravity="center"
            android:text="@string/text_fav"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="40dip"
            android:layout_height="18dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_action"
            android:gravity="center"
            android:text="@string/text_share"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnLike"
            android:layout_width="40dip"
            android:layout_height="18dip"
            android:layout_marginRight="3dip"
            android:background="@drawable/btn_action"
            android:gravity="center"
            android:text="@string/text_like"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>