<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.drem.dremboard.view.CustomSearchView
        android:id="@+id/lay_drem_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.drem.dremboard.view.CustomSearchView>

    <ProgressBar
        android:id="@+id/progMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

        <GridView
        android:id="@+id/gridDremcasts"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/progMore"
        android:layout_below="@+id/lay_drem_search"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@android:color/transparent"
        android:columnWidth="250dip"
        android:gravity="center"
        android:horizontalSpacing="5dip"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="15dp" >

    </GridView>
</RelativeLayout>
