<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dip"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/login_normal"
        android:gravity="center" >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:text="@string/text_get_pwd"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:paddingLeft="7dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:singleLine="false"
            android:background="@drawable/yellowborder_lightyellowback"
            android:text="@string/text_get_pwd_des"
            android:textSize="14sp"
            android:textColor="@color/black" />
        
        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:hint="@string/text_username_email"
            android:inputType="text"
            android:paddingLeft="10.0dip"
            android:singleLine="true"
            android:textColorHint="#ffcccccc"
            android:textSize="14sp" 
            android:textColor="@color/black" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:padding="10dip"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="18sp" />
        
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:padding="10dip"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>   

</LinearLayout>