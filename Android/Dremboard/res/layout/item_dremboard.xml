<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <LinearLayout
        android:id="@+id/layAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/activity_action"
        android:orientation="horizontal" >

        <com.drem.dremboard.view.WebCircularImgView
            android:id="@+id/imgAuthor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Author" />

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:minHeight="30dp"
            android:paddingLeft="10dp"
            android:text="Author Name"
            android:textColor="#783302"
            android:textColorLink="#783302"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </LinearLayout>

    <com.drem.dremboard.view.WebImgView
        android:id="@+id/imgPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layAuthor"
        android:layout_centerHorizontal="true"
        android:background="@color/bg_lightblue"
        android:gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtDremCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/imgPic"
        android:layout_alignParentRight="true"
        android:padding="5dip"
        android:layout_marginRight="5dip"
        android:text="3 Drems"
        android:textColor="@color/darkgray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPic"
        android:layout_marginLeft="10dip"
        android:layout_marginBottom="7dip"
        android:layout_marginTop="1dip"
        android:text="Board Name"
        android:textColor="@color/fg_darkred"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="5dip"
        android:background="@color/lightgray" />

</RelativeLayout>