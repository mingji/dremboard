<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="7dip"
        android:background="@drawable/grayborder_grayback"
        android:padding="7dip" >

        <com.drem.dremboard.view.WebCircularImgView
            android:id="@+id/imgSender"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/imgSender"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/imgSender"
            android:text="User Name"
            android:textColor="@color/darkred1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtTimeSince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSender"
            android:layout_marginLeft="12dip"
            android:layout_toRightOf="@+id/imgSender"
            android:text="sent 41 minutes ago"
            android:textColor="@color/darkgray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgSender"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:singleLine="false"
            android:text="&quot;hello content&quot;"
            android:textColor="@color/darkgray"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>